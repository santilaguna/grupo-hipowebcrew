<h2 class="form-header">Login</h2>


<% if (locals.notice) { %>
  <div className="notice"></div><%= notice %></div>
<% } %>
<% if (locals.error) { %>
  <div class="error">
    <%= error %>
  </div>
<% } %>
</div>

<div class="form-container">
  <form action="<%= logINPath %>" method="post">
    <input type="hidden" name="_method" value="put" />
      <div class="field">
        <label for="email">Email</label>
        <input type="email" name="email" value="<%= locals.email %>" placeholder="Ingresa tu correo..." />
      </div>
      <div class="field">
        <label for="password">Contraseña</label>
        <input type="password" name="password" value="<%= locals.password %>" placeholder="Ingresa tu contraseña..."/>
      </div>
      <div class="field">
        <input type="submit" name="sign-in" value="Iniciar sesión" />
      </div>
  </form>
</div>